Options -Indexes

<files ~ "^.*\.([Hh][Tt][Aa])">
order allow,deny
deny from all
satisfy all
</files>

<IfModule mod_rewrite.c>

  Options +FollowSymLinks
    RewriteEngine On


    RewriteBase /
    #----------------------------------------------------------------------------------------------
